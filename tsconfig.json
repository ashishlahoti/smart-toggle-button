{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "strictFunctionTypes": true,
        "lib": ["es2017", "dom"],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
